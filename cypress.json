{"chromeWebSecurity": false,
    "pageLoadTimeout": 90000,
    "viewportWidth": 1660,
    "viewportHeight": 1080,
    "testFiles": "**/*/*.spec.js",
    "reporter": "mochawesome",
    "reporterOptions": {
        "reportDir": "cypress/reports",
        "reportFilename": "mocha_report",
        "timestamp": "ddmmyyyy_HHMMss",
        "overwrite": false,
        "html": true,
        "json": false,
        "charts": true,
        "video": true
    },
    "env": {
        "allureResultsPath": "allure-results",
        "allure": true
    } 
}